{
  "_comment": "LEGACY FILE - This ECS task definition is no longer used. Infrastructure is now managed by CDK (see cdk/stacks/batch_java_processor_stack.py). Kept for reference only.",
  "family": "java-processor-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "java-processor",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/java-processor:latest",
      "essential": true,
      "environment": [
        {
          "name": "S3_BUCKET",
          "value": "your-output-bucket"
        },
        {
          "name": "S3_PREFIX",
          "value": "output"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/java-processor",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
